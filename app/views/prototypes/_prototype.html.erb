<div class="card">
  <% @prototypes.each do |prototype| %>
    <%= link_to  prototype_path(prototype.id),method: :get do %>
      <% if prototype.image %>
        <%= image_tag prototype.image , class: :card__img %>
      <% end %>
    <% end %>
    <div class="card__body">
      <%= link_to prototype.title , prototype_path(prototype.id), class: :card__title%>
      <p class="card__summary">
        <%= prototype.catch_copy %>
      </p>
      <%= link_to "by #{prototype.user.name}", prototype_path(prototype.id),method: :get, class: :card__user %>
    </div>
  <% end %>
</div>